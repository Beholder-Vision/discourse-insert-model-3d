<input
  type="text"
  name="model-3d"
  value={{model3d}}
  {{on "input" this.updateModel3D}}
/>

<div class="simple-list-uploader">
  <label class="btn {{if addDisabled 'disabled'}}">
    {{d-icon "upload"}}
    <input
      class="hidden-upload-field"
      type="file"
      disabled={{addDisabled}}
      accept="model/gltf-binary,model/gltf+json"
    />
  </label>
  {{conditional-loading-spinner condition=addDisabled}}
</div>